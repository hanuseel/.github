<!-- 로그인 script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    $('.login_box.com').hide();

    $('.tap_find a').click(function(e) {
        e.preventDefault();
        $('.tap_find a').removeClass('on'); 
        $(this).addClass('on'); 

        if ($(this).text() === '개인회원') {
            $('.login_box.com').hide(); 
            $('.login_box.mem').show(); 
        } else {
            $('.login_box.mem').hide(); 
            $('.login_box.com').show(); 
        }
    });
});
</script>


